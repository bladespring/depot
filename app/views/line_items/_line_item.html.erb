<tr class="<%= 'line-item-highlight' if line_item == @current_item %>">
  <td class="text-right">
    <%= line_item.quantity %>
  </td>
  <td>&times;</td>
  <td class="pr-2"><%= line_item.product.title %></td>
  <td>
    <% if line_item.quantity > 1 %>
      <%= button_to '-', line_item_path(line_item, line_item: { quantity: line_item.quantity - 1 }),
                    method: :put,
                    class: 'bg-green-400 px-1' %>
    <% else %>
      <%= button_to line_item, method: :delete, class: 'bg-green-400 px-1' do %>
        &times;
      <% end %>
    <% end %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency line_item.total_price %>
  </td>
</tr>
